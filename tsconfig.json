{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*", "tests/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "dist"]
}
